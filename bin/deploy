#!/bin/bash
pushd "$(dirname "$0")/.."
export CI_DEPLOY_DIR="$PWD"
popd

export DEPLOY_STATUS='started'
"$CI_DEPLOY_DIR/bin/rollbar-deploy"

retVal=$?
if [ $retVal -eq 0 ]; then
  "$CI_DEPLOY_DIR/bin/run-deploy"
fi

retVal=$?
if [ $retVal -eq 0 ]; then
  export DEPLOY_STATUS='succeeded'
else
  export DEPLOY_STATUS='failed'
fi
"$CI_DEPLOY_DIR/bin/rollbar-deploy"

exit $?
